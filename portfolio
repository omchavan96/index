<!-- ðŸŽµ Music Icon -->
<div class="music-player" id="musicIcon" title="Play / Pause Music">ðŸŽµ</div>

<!-- ðŸŽ¶ Background Music -->
<audio id="bgMusic" loop preload="auto">
    <source src="tame_impala_less_i_know_better.mp3" type="audio/mpeg">
    Your browser does not support the audio element.
</audio>

<script>
    // Music Player Fix
    const music = document.getElementById("bgMusic");
    const icon = document.getElementById("musicIcon");
    music.volume = 0.3;  // Set volume
    let isPlaying = false;

    icon.addEventListener("click", () => {
        console.log("Music icon clicked");  // Debug

        if (!isPlaying) {
            const playPromise = music.play();
            if (playPromise !== undefined) {
                playPromise
                    .then(() => {
                        icon.textContent = "â¸ï¸";
                        isPlaying = true;
                    })
                    .catch(err => {
                        console.log("Audio play failed:", err);
                        alert("Unable to play music. Tap the icon again.");
                    });
            }
        } else {
            music.pause();
            icon.textContent = "ðŸŽµ";
            isPlaying = false;
        }
    });

    // Fade-in on scroll
    const faders = document.querySelectorAll('.fade-in');
    const appearOptions = { threshold: 0.2, rootMargin: "0px 0px -50px 0px" };
    const appearOnScroll = new IntersectionObserver(function(entries, observer) {
        entries.forEach(entry => {
            if (!entry.isIntersecting) return;
            entry.target.classList.add('visible');
            observer.unobserve(entry.target);
        });
    }, appearOptions);
    faders.forEach(fader => appearOnScroll.observe(fader));

    // Header-only canvas animation + cursor trail
    const canvas = document.getElementById("dataCanvas");
    const ctx = canvas.getContext("2d");

    let width = canvas.width = window.innerWidth;
    let height = canvas.height = document.querySelector("header").offsetHeight;

    window.addEventListener('resize', () => { 
        width = canvas.width = window.innerWidth; 
        height = canvas.height = document.querySelector("header").offsetHeight; 
    });

    // Nodes
    const nodes = [];
    const nodeCount = 50;
    for (let i = 0; i < nodeCount; i++) {
        nodes.push({ x: Math.random() * width, y: Math.random() * height, vx: (Math.random() - 0.5) * 0.7, vy: (Math.random() - 0.5) * 0.7 });
    }

    const mouse = { x: null, y: null, radius: 150 };
    const trailParticles = [];
    const maxTrail = 20;

    window.addEventListener('mousemove', e => {
        mouse.x = e.x;
        mouse.y = e.y;
        trailParticles.push({ x: e.clientX, y: e.clientY, alpha: 1, size: Math.random() * 5 + 3 });
        if (trailParticles.length > maxTrail) trailParticles.shift();
    });

    window.addEventListener('mouseout', () => { mouse.x = null; mouse.y = null; });

    function animate() {
        ctx.clearRect(0, 0, width, height);

        for (let i = 0; i < nodeCount; i++) {
            const nodeA = nodes[i];
            nodeA.x += nodeA.vx;
            nodeA.y += nodeA.vy;
            if (nodeA.x < 0 || nodeA.x > width) nodeA.vx *= -1;
            if (nodeA.y < 0 || nodeA.y > height) nodeA.vy *= -1;

            ctx.fillStyle = "#38bdf8";
            ctx.beginPath();
            ctx.arc(nodeA.x, nodeA.y, 3, 0, Math.PI * 2);
            ctx.fill();

            for (let j = i + 1; j < nodeCount; j++) {
                const nodeB = nodes[j];
                const dx = nodeA.x - nodeB.x, dy = nodeA.y - nodeB.y;
                const dist = Math.sqrt(dx * dx + dy * dy);
                if (dist < 150) {
                    ctx.strokeStyle = `rgba(56,189,248,${1 - dist / 150})`;
                    ctx.lineWidth = 1;
                    ctx.beginPath();
                    ctx.moveTo(nodeA.x, nodeA.y);
                    ctx.lineTo(nodeB.x, nodeB.y);
                    ctx.stroke();
                }
            }

            if (mouse.x && mouse.y) {
                const dxm = nodeA.x - mouse.x, dym = nodeA.y - mouse.y;
                const distMouse = Math.sqrt(dxm * dxm + dym * dym);
                if (distMouse < mouse.radius) {
                    ctx.strokeStyle = `rgba(255,255,255,${1 - distMouse / mouse.radius})`;
                    ctx.lineWidth = 1;
                    ctx.beginPath();
                    ctx.moveTo(nodeA.x, nodeA.y);
                    ctx.lineTo(mouse.x, mouse.y);
                    ctx.stroke();
                }
            }
        }

        trailParticles.forEach(p => {
            ctx.beginPath();
            ctx.arc(p.x, p.y, p.size, 0, Math.PI * 2);
            ctx.fillStyle = `rgba(56,189,248,${p.alpha})`;
            ctx.fill();
            p.alpha -= 0.03;
        });

        for (let i = trailParticles.length - 1; i >= 0; i--) {
            if (trailParticles[i].alpha <= 0) trailParticles.splice(i, 1);
        }

        requestAnimationFrame(animate);
    }

    animate();
</script>

</body>  
